<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aib.pet">

    <!-- app权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.aib.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.aib.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aib.view.activity.HomeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:theme="@style/no_color_status" />
        <activity
            android:name="com.aib.view.activity.SettingsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aib.view.activity.RegisterActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.aib.view.activity.LoginActivity" />
        <activity android:name="com.aib.view.activity.AboutActivity"></activity>
    </application>

</manifest>